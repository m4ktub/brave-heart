{
  "manifest_version": 2,
  "name": "Brave Heart",
  "description": "Directly reward web producers with Bitcoin Cash and no trusted intermediaries",
  "version": "0.1",
  "permissions": [
    "tabs", "activeTab", "storage", "chrome://favicon/"
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "options_page": "pages/options.html",
  "browser_action": {
    "default_title": "Brave Heart",
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "images/icon16.png"
    }
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}