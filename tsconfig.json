        "target": "es6",
        "rootDir": "src",
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "types": [ "chrome" ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
